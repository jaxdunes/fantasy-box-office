    <script>
        // ============================================
        // CONFIGURATION
        // ============================================
        
        const DRAFT_SHEET_URL = https://docs.google.com/spreadsheets/d/e/2PACX-1vR4KwaNAjKgx_8gkFYJqfsizgBvQlkio43dt-TNiE8lavM8uudlxcs_R7x--iuEYSHUcpOBtt7iaFXd/pub?gid=296794178&single=true&output=csv;
        const MOVIES_SHEET_URL = 'https://docs.google.com/spreadsheets/d/e/2PACX-1vR4KwaNAjKgx_8gkFYJqfsizgBvQlkio43dt-TNiE8lavM8uudlxcs_R7x--iuEYSHUcpOBtt7iaFXd/pub?gid=0&single=true&output=csv;
        const TMDB_API_KEY = 'e40a36fbe294dc2a7f21f7bb68b35304'; // Free public key for poster fetching

        let draftData = [];
        let moviesData = [];
        let moviePosters = {};

        // ============================================
        // DATA FETCHING
        // ============================================

        function parseCSV(text) {
            const lines = text.trim().split('\n');
            const headers = lines[0].split(',').map(h => h.trim().replace(/"/g, ''));
            const data = [];

            for (let i = 1; i < lines.length; i++) {
                if (!lines[i].trim()) continue;
                
                const values = [];
                let current = '';
                let inQuotes = false;
                
                for (let char of lines[i]) {
                    if (char === '"') {
                        inQuotes = !inQuotes;
                    } else if (char === ',' && !inQuotes) {
                        values.push(current.trim().replace(/"/g, ''));
                        current = '';
                    } else {
                        current += char;
                    }
                }
                values.push(current.trim().replace(/"/g, ''));

                const row = {};
                headers.forEach((header, index) => {
                    row[header] = values[index] || '';
                });
                data.push(row);
            }

            return data;
        }

        async function fetchMoviePoster(movieTitle) {
            try {
                const response = await fetch(
                    `https://api.themoviedb.org/3/search/movie?api_key=${TMDB_API_KEY}&query=${encodeURIComponent(movieTitle)}`
                );
                const data = await response.json();
                
                if (data.results && data.results[0] && data.results[0].poster_path) {
                    return `https://image.tmdb.org/t/p/w500${data.results[0].poster_path}`;
                }
                return null;
            } catch (error) {
                console.error('Error fetching poster:', error);
                return null;
            }
        }

        async function loadData() {
            try {
                // Fetch draft data
                const draftResponse = await fetch(DRAFT_SHEET_URL);
                const draftCSV = await draftResponse.text();
                const parsedDraft = parseCSV(draftCSV);

                draftData = parsedDraft.map(row => ({
                    player: row.Player || row.player || '',
                    pickType: row['Pick Type'] || row.pickType || '',
                    movie: row.Movie || row.movie || '',
                    typeClean: row.TypeClean || row.typeClean || '',
                    profitToDate: parseFloat(row['Profit To Date'] || row.profitToDate || 0)
                })).filter(d => d.player && d.movie);

                // Fetch movies data
                const moviesResponse = await fetch(MOVIES_SHEET_URL);
                const moviesCSV = await moviesResponse.text();
                const parsedMovies = parseCSV(moviesCSV);

                moviesData = parsedMovies.map(row => ({
                    title: row.Movie || row.movie || row.title || '',
                    releaseDate: row['Release Date'] || row.releaseDate || '',
                    budget: parseFloat(row['Budget (USD)'] || row.budget || 0),
                    worldwideGross: parseFloat(row['Worldwide Gross (USD)'] || row.worldwideGross || 0),
                    profitToDate: parseFloat(row['Profit To Date'] || row.profitToDate || 0)
                })).filter(m => m.title);

                // Fetch movie posters
                for (const movie of moviesData) {
                    if (!moviePosters[movie.title]) {
                        moviePosters[movie.title] = await fetchMoviePoster(movie.title);
                    }
                }

                // Hide loading, show content
                document.getElementById('loadingIndicator').style.display = 'none';
                document.getElementById('leaderboard').style.display = 'block';

                // Update status
                const now = new Date();
                document.getElementById('statusText').innerHTML = `Live ‚Ä¢ ${now.toLocaleTimeString()}`;

                // Render all data
                renderLeaderboard();
                renderDraftPicks();
                renderMovies();
                renderStats();

            } catch (error) {
                console.error('Error loading data:', error);
                document.getElementById('loadingIndicator').innerHTML = `
                    <div class="error-message">
                        <h3>‚ö†Ô∏è Connection Error</h3>
                        <p style="margin: 20px 0; color: var(--text-muted);">Could not load data from Google Sheets</p>
                        <button onclick="location.reload()" style="background: var(--accent); color: var(--bg-dark); border: none; padding: 12px 30px; border-radius: 8px; cursor: pointer; font-weight: 700; font-family: 'Space Mono', monospace;">
                            üîÑ Retry
                        </button>
                    </div>
                `;
            }
        }

        // ============================================
        // UI FUNCTIONS
        // ============================================

        function showTab(tabName) {
            document.querySelectorAll('.tab-content').forEach(c => c.classList.remove('active'));
            document.querySelectorAll('.tab').forEach(t => t.classList.remove('active'));
            
            document.getElementById(tabName).classList.add('active');
            event.target.classList.add('active');
        }

        function formatCurrency(value) {
            if (!value) return '$0';
            const abs = Math.abs(value);
            if (abs >= 1000000000) return `$${(abs / 1000000000).toFixed(2)}B`;
            if (abs >= 1000000) return `$${(abs / 1000000).toFixed(1)}M`;
            if (abs >= 1000) return `$${(abs / 1000).toFixed(0)}K`;
            return `$${abs.toFixed(0)}`;
        }

        function calculateLeaderboard() {
            const playerScores = {};
            const playerPicks = {};

            draftData.forEach(pick => {
                if (!playerScores[pick.player]) {
                    playerScores[pick.player] = 0;
                    playerPicks[pick.player] = 0;
                }
                playerScores[pick.player] += pick.profitToDate || 0;
                playerPicks[pick.player]++;
            });

            return Object.entries(playerScores)
                .map(([player, score]) => ({ 
                    player, 
                    score,
                    picks: playerPicks[player]
                }))
                .sort((a, b) => b.score - a.score);
        }

        function renderLeaderboard() {
            const leaderboard = calculateLeaderboard();
            const container = document.getElementById('leaderboardContent');

            if (leaderboard.length === 0) {
                container.innerHTML = '<p style="text-align: center; padding: 60px; color: var(--text-muted);">No players yet</p>';
                return;
            }

            container.innerHTML = leaderboard.map((entry, index) => {
                const isChampion = index === 0;
                const scoreClass = entry.score >= 0 ? 'score-positive' : 'score-negative';
                
                return `
                    <div class="player-card ${isChampion ? 'champion' : ''}">
                        <div class="rank ${isChampion ? 'champion' : ''}">
                            ${isChampion ? 'üëë' : '#' + (index + 1)}
                        </div>
                        <div class="player-info">
                            <div class="player-name">${entry.player}</div>
                            <div class="player-picks">${entry.picks} picks</div>
                        </div>
                        <div class="player-score ${scoreClass}">
                            ${entry.score >= 0 ? '+' : ''}${formatCurrency(entry.score)}
                        </div>
                    </div>
                `;
            }).join('');
        }

        function renderDraftPicks() {
            const container = document.getElementById('draftContent');

            if (draftData.length === 0) {
                container.innerHTML = '<p style="text-align: center; padding: 60px; color: var(--text-muted);">No draft picks yet</p>';
                return;
            }

            container.innerHTML = draftData.map(pick => {
                const profitClass = pick.profitToDate >= 0 ? 'score-positive' : 'score-negative';
                
                return `
                    <div class="draft-item">
                        <div class="player-tag">${pick.player}</div>
                        <div>
                            <div style="font-weight: 700; margin-bottom: 5px;">${pick.movie}</div>
                            <div style="color: var(--text-muted); font-size: 0.85rem;">${pick.pickType}</div>
                        </div>
                        <div class="pick-badge ${pick.typeClean.toLowerCase() === 'hit' ? 'badge-hit' : 'badge-bomb'}">
                            ${pick.typeClean}
                        </div>
                        <div class="player-score ${profitClass}" style="font-size: 1.5rem;">
                            ${pick.profitToDate >= 0 ? '+' : ''}${formatCurrency(pick.profitToDate)}
                        </div>
                    </div>
                `;
            }).join('');
        }

        function renderMovies() {
            const container = document.getElementById('moviesContent');

            if (moviesData.length === 0) {
                container.innerHTML = '<p style="text-align: center; padding: 60px; color: var(--text-muted);">No movies yet</p>';
                return;
            }

            container.innerHTML = moviesData.map(movie => {
                const profitClass = movie.profitToDate >= 0 ? 'score-positive' : 'score-negative';
                const poster = moviePosters[movie.title];
                
                return `
                    <div class="movie-card">
                        ${poster ? 
                            `<img src="${poster}" alt="${movie.title}" class="movie-poster">` :
                            `<div class="movie-poster">${movie.title}</div>`
                        }
                        <div class="movie-info">
                            <div class="movie-title">${movie.title}</div>
                            <div class="movie-meta">
                                <span>${movie.releaseDate}</span>
                                <span class="movie-profit ${profitClass}">
                                    ${movie.profitToDate >= 0 ? '+' : ''}${formatCurrency(movie.profitToDate)}
                                </span>
                            </div>
                        </div>
                    </div>
                `;
            }).join('');
        }

        function renderStats() {
            const totalMovies = moviesData.length;
            const totalPlayers = [...new Set(draftData.map(p => p.player))].length;
            const totalPicks = draftData.length;
            const totalGross = moviesData.reduce((sum, m) => sum + (m.worldwideGross || 0), 0);
            
            const leaderboard = calculateLeaderboard();
            const leader = leaderboard[0] || { player: 'TBD', score: 0 };

            const container = document.getElementById('statsContent');
            container.innerHTML = `
                <div class="stat-card">
                    <div class="stat-value">${totalPlayers}</div>
                    <div class="stat-label">Players</div>
                </div>
                <div class="stat-card">
                    <div class="stat-value">${totalMovies}</div>
                    <div class="stat-label">Movies</div>
                </div>
                <div class="stat-card">
                    <div class="stat-value">${totalPicks}</div>
                    <div class="stat-label">Total Picks</div>
                </div>
                <div class="stat-card">
                    <div class="stat-value">${formatCurrency(totalGross)}</div>
                    <div class="stat-label">Total Box Office</div>
                </div>
                <div class="stat-card" style="grid-column: span 2;">
                    <div class="stat-value" style="font-size: 2rem;">${leader.player}</div>
                    <div class="stat-label">Current Leader</div>
                    <div style="color: var(--success); font-size: 2rem; margin-top: 10px; font-family: 'Bebas Neue', cursive;">
                        ${leader.score >= 0 ? '+' : ''}${formatCurrency(leader.score)}
                    </div>
                </div>
            `;
        }

        function filterDraft() {
            const searchTerm = document.getElementById('draftSearch').value.toLowerCase();
            const items = document.querySelectorAll('.draft-item');

            items.forEach(item => {
                const text = item.textContent.toLowerCase();
                item.style.display = text.includes(searchTerm) ? 'grid' : 'none';
            });
        }

        function filterMovies() {
            const searchTerm = document.getElementById('movieSearch').value.toLowerCase();
            const cards = document.querySelectorAll('.movie-card');

            cards.forEach(card => {
                const text = card.textContent.toLowerCase();
                card.style.display = text.includes(searchTerm) ? 'block' : 'none';
            });
        }

        // Auto-refresh every 5 minutes
        setInterval(loadData, 5 * 60 * 1000);

        // Load data on page load
        window.addEventListener('DOMContentLoaded', loadData);
    </script>
</body>
</html>
